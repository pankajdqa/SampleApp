<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/back11"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:orientation="horizontal" >

<!--                <ImageView-->
<!--                    android:id="@+id/imgChips"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:src="@drawable/chips" />-->

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:background="@drawable/abutton1"
                     >
                <TextView
                    android:id="@+id/tvMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#ffff00"
                    android:textSize="25sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="@drawable/abutton1"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/tvHighest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_margin="4dp"
                        android:layout_gravity="center_vertical"
                        android:text="0"
                        android:layout_marginVertical="5dp"
                        android:textSize="25sp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#ffff00" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginVertical="20dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tvDealer"
                    android:layout_width="240dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:background="@drawable/abutton"
                    android:text="Dealer&apos;s Score :- 0"
                    android:textSize="25sp"
                    android:textColor="#ffff00" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:gravity="center"
                android:layout_marginVertical="5dp"
                android:layout_height="wrap_content" >

                <ImageSwitcher
                    android:id="@+id/ivDealerCard1"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="1dp" />

                <ImageSwitcher
                    android:id="@+id/ivDealerCard2"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="1dp" />

                <ImageSwitcher
                    android:id="@+id/ivDealerCard3"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="1dp" />

                <ImageSwitcher
                    android:id="@+id/ivDealerCard4"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="1dp" />

                <ImageSwitcher
                    android:id="@+id/ivDealerCard5"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="1dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginVertical="10dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tvYou"
                    android:layout_width="240dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="Your Score :- 0"
                    android:background="@drawable/abutton"
                    android:textSize="25sp"
                    android:textColor="#ffff00" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:gravity="center"
                android:layout_marginVertical="5dp"
                android:layout_height="wrap_content" >

                <ImageSwitcher
                    android:id="@+id/ivYourCard1"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="1dp" />

                <ImageSwitcher
                    android:id="@+id/ivYourCard2"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="1dp" />

                <ImageSwitcher
                    android:id="@+id/ivYourCard3"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="1dp" />

                <ImageSwitcher
                    android:id="@+id/ivYourCard4"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="1dp" />

                <ImageSwitcher
                    android:id="@+id/ivYourCard5"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="1dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/abutton1"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:gravity="center" >

                <TextView
                    android:id="@+id/tvBet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ffff00" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center" >

                <SeekBar
                    android:id="@+id/sbBetAmount"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btnPlaceBet"
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:textSize="25sp"
                    android:background="@drawable/button_selector"
                    android:text="Place Bet" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center" >

                <Button
                    android:id="@+id/btnHit"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:textSize="25sp"
                    android:background="@drawable/button_selector"
                    android:text="Hit" />

                <Button
                    android:id="@+id/btnStand"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:textSize="25sp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/button_selector"
                    android:text="Stand" />

                <Button
                    android:id="@+id/btnSurrender"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="25sp"
                    android:background="@drawable/button_selector"
                    android:text="Surrender" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btnExit"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="25sp"
                    android:background="@drawable/button_selector"
                    android:text="Exit" />

                <Button
                    android:id="@+id/btnHelp"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="25sp"
                    android:background="@drawable/button_selector"
                    android:text="Help" />
                
                
            </LinearLayout>
